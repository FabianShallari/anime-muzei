<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_anime_muzei_settings"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codes.fabio.animemuzei.settings.SettingsActivity">

  <TextView
      android:layout_margin="8dp"
      android:id="@+id/appName"
      android:textColor="?android:textColorPrimary"
      android:layout_marginBottom="16dp"
      android:textStyle="bold|italic"
      android:layout_gravity="top|center"
      android:text="@string/app_name"
      android:textSize="26sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <LinearLayout
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:orientation="vertical"
      android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TextView
          android:textColor="?android:textColorPrimary"
          android:textSize="18sp"
          android:text="@string/update_every"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <Spinner
          android:backgroundTint="?android:textColorPrimary"
          android:gravity="center"
          android:id="@+id/updateInterval"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:targetApi="lollipop"/>
    </LinearLayout>
    <CheckBox
        android:layout_gravity="center_horizontal"
        android:id="@+id/nsfw"
        android:textSize="18sp"
        android:text="@string/include_nsfw_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  </LinearLayout>

  <TextView
      android:textColor="?android:textColorPrimary"
      android:id="@+id/madeWithLove"
      android:textSize="16sp"
      android:layout_margin="8dp"
      android:text="@string/made_with_love_in_tirana"
      android:layout_gravity="bottom|center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
</FrameLayout>
