<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_anime_muzei_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codes.fabio.animemuzei.settings.SettingsActivity">

  <LinearLayout
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:orientation="vertical"
      android:layout_height="wrap_content">
    <ImageView
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:id="@+id/logo"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"/>
    <TextView
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:id="@+id/appName"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TextView
          android:textColor="@color/colorPrimaryDark"
          android:textSize="18sp"
          android:text="@string/update_every"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <Spinner
          android:gravity="center"
          android:id="@+id/updateInterval"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>
    <CheckBox
        android:layout_gravity="center_horizontal"
        android:id="@+id/nsfw"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:text="@string/include_nsfw_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  </LinearLayout>

  <TextView
      android:textColor="@color/colorAccent"
      android:id="@+id/madeWithLove"
      android:textSize="16sp"
      android:layout_marginBottom="8dp"
      android:text="@string/made_with_love_in_tirana"
      android:layout_gravity="bottom|center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
</FrameLayout>
